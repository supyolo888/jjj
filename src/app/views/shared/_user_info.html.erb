<% if current_user.avatar? %>
  <%= link_to image_tag(current_user.avatar.url, width: "100px", height: "100px", class:"icon"),current_user%>
<% else%>
  <%= link_to image_tag("default_user.jpg", width: "100px", height: "100px", class:"icon"),current_user%>
<% end %>
<h1><%= current_user.name %></h1>
<span><%= link_to "view my profile", current_user %></span>
<span><%= pluralize(current_user.microposts.count, "micropost") %></span>